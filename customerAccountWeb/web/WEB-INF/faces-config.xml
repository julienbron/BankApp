<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <navigation-rule>
        <from-view-id>/customerList.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{customerDetailsBean.recupCustomer(cust.number)}</from-action>
            <from-outcome>0</from-outcome>
            <to-view-id>/customerDetails.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/createCustomer.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{customerCreateBean.createCustomer()}</from-action>
            <from-outcome>0</from-outcome>
            <to-view-id>/createCustomerOk.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <application>
<!-- URL du package contenant les message_XX.properties -->
       <resource-bundle>
             <base-name>ch.hearc.ig.odi.customeraccount.message</base-name>
             <var>bundle</var>
       </resource-bundle>
<!-- Ajout de la langue par défaut et des langues supportées -->
       <locale-config>
             <default-locale>en</default-locale>
             <supported-locale>fr</supported-locale>
       </locale-config>
   </application>

</faces-config>
